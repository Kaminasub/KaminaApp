<resources>
    <!-- Splash Screen Theme -->
    <style name="Theme.App.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/skull_background</item> <!-- Use any drawable or color here -->
    </style>


    <!-- Main App Theme -->
    <style name="Theme.KaminaApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Set the default background color for the main app -->
        <item name="android:windowBackground">@color/background</item> <!-- Background color of your app -->
    </style>
</resources>
