<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color with transparency (simulate a blur effect) -->
    <solid android:color="#B3FFFFFF" /> <!-- Semi-transparent white for blur effect -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Light border color -->

</shape>
