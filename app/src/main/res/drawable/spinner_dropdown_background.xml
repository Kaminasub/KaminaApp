<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent background to simulate blur effect -->
    <solid android:color="#B3FFFFFF" />  <!-- Adjust the color code for transparency (B3 is 70% transparency) -->

    <!-- Rounded corners -->
    <corners android:radius="30dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Light border color (optional) -->
</shape>
